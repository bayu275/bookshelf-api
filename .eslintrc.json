{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "linebreak-style": [
            "error",
            "windows"
        ],
        "no-console": "warn",
        "no-unused-vars": "warn",
        "max-len": [
            "error",
            120
        ],
        "implicit-arrow-linebreak": [
            "error",
            "beside"
        ],
        "arrow-body-style":"warn"
    }
}